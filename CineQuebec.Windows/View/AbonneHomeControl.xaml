<UserControl x:Class="CineQuebec.Windows.View.AbonneHomeControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CineQuebec.Windows.View">

    <Grid Background="White" Height="180" Width="220">
        <!-- Center the buttons using a StackPanel -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Button for reserving a seat for a projection -->
            <Button x:Name="btnReserverUnePlace" Content="Reserve a Seat" Width="200" Click="btnReserverUnePlace_Click"/>

            <!-- Button for introducing preferences -->
            <Button x:Name="btnVoirPreferance" Margin="0,30,0,30" Content="Introduce Preferences" Width="200" Click="btnVoirPreferance_Click" />

            <!-- Button for rating a movie -->
            <Button x:Name="btnNoteUnFilm" Content="Rate a Movie" Width="200" Click="btnNoteUnFilm_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
